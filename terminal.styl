.container-terminal {
	background $backgroundColor
	height 100vh
	padding 20px
	box-sizing border-box
}

.terminal {
	margin 0 auto
	display flex

	&__title {
		font-size 16px
		margin-bottom 22px
		font-size 18px
		color #333
	}


	&__form {
		display block
		background #fff
		padding 20px
		box-shadow 0 1px 5px -1px rgba(0,0,0,.3)
		position relative

		&:not(:last-child) {
			margin-right 20px
		}

		&_search {

		}

		&_success ^[0]__popup {
			opacity 1
			visibility visible
			faster()
		}
	}

	&__field-box {
		margin-bottom 20px
	}

	&__field {
		box-sizing border-box
		width 200px
		height 30px
		font-size 14px
		outline none
		display block
		border 1px solid $borderColor
		padding-left 10px
		color #333
		transition background-color $duration

		&:not(:last-child) {
			margin-bottom 20px
		}

		&_disable {
			background darken(#fff,5)
			faster()
		}
	}

	&__button {
		box-sizing border-box
		font-size 16px
		height 30px
		width 200px
		padding 0 10px
		background #fff
		border 1px solid $borderColor
		outline none
		color #333
		cursor pointer
		transition background-color $duration, color $duration

		&:hover {
			background darken(#fff,3)
			color lighten(#333,10)
			faster()
		}
	}

	&__popup {
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		background rgba(255,255,255,.8)
		display flex
		justify-content center
		align-items center
		font-size 20px
		opacity 0
		visibility hidden
		transition opacity $duration, visibility $duration
	}

	&__form_search {
		display flex
	}

	&__search-block {
		margin-right 10px
	}

	&__result-block {
		box-sizing border-box
		width 300px
		border 1px solid $borderColor
	}

	&__result-title {
		height 30px
		border-bottom 1px solid $borderColor
		background darken(#fff,3)
		position relative
		display flex
		justify-content flex-end
	}

	&__result-control {
		line-height 30px
		width 40px
		height 30px
		cursor pointer
		transition background-color $duration, color $duration
		user-select none
		color #333
		text-align center
		vertical-align middle

		&:hover {
			background darken(#fff,7)
			color lighten(#333,10)
			faster()
		}
	}

	&__result-clear {
		position relative

		&::before
		&::after {
			display block
			content ''
			position absolute
			top 50%
			left 50%
			width 20px
			height 2px
			background $borderColor
			transform translateX(-50%) translateY(-50%)
			transition transform $duration, background-color $duration
		}

		&_enable {
			&::before {
				transform translateX(-50%) translateY(-50%) rotate(45deg)
				background-color #333
				faster()
			}

			&::after{
				transform translateX(-50%) translateY(-50%) rotate(-45deg)
				background-color #333
				faster()
			}
		}
	}

	&__del-db {
		margin-right auto

		&:hover {
			background rgba(255,0,0,.3);
		}
	}

	&__result-content {
		padding 10px
		max-height 170px
		overflow scroll
	}

	&__result-item {
		border-bottom 1px solid $borderColor
		padding-bottom 3px

		&:not(:last-child) {
			margin-bottom 10px

		}
	}
}

.field-error {
	border-color red
}
