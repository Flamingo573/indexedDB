.container-terminal {
	background $backgroundColor
	height 100vh
	padding 20px
	box-sizing border-box
}

.terminal {
	margin 0 auto
	width 860px
	display flex
	justify-content center

	&__form {
		background #fff
		padding 20px
		box-shadow 0 1px 5px -1px rgba(0,0,0,.3)
		position relative

		&:not(:last-child) {
			margin-right 20px
		}

		&_search {

		}

		&_success ^[0]__popup
		&_del-db ^[0]__popup-danger {
			opacity 1
			visibility visible
			faster()
		}
	}

	&__title {
		font-size 16px
		margin-bottom 22px
		font-size 18px
		color #333
	}

	&__field-box {
		margin-bottom 20px
	}

	&__field {
		box-sizing border-box
		width 200px
		height 30px
		font-size 14px
		outline none
		display block
		border 1px solid $borderColor
		padding-left 10px
		color #333
		transition background-color $duration

		&:not(:last-child) {
			margin-bottom 20px
		}
	}

	&__button {
		font-size 16px
		height 30px
		width 200px
		background #fff
		border 1px solid $borderColor
		outline none
		color #333
		cursor pointer
		transition background-color $duration, color $duration

		&:hover {
			background darken(#fff,3)
			color lighten(#333,10)
			faster()
		}
	}

	&__form_control {
		display flex
	}

	&__search-block {
		margin-right 10px
	}

	&__control-block {
		box-sizing border-box
		width 300px
		border 1px solid $borderColor
	}

	&__control-title {
		height 30px
		border-bottom 1px solid $borderColor
		background darken(#fff,3)
		position relative
		display flex
		justify-content flex-end
	}

	&__control-button {
		line-height 30px
		width 40px
		height 30px
		cursor pointer
		transition background-color $duration, color $duration
		user-select none
		color #333
		text-align center
		vertical-align middle

		&:hover {
			background darken(#fff,7)
			color lighten(#333,10)
			faster()
		}
	}

	&__del {
		width 60px

		&:not(&_disable) {
			&:hover {
				background rgba(255,0,0,.3);
			}
		}

		&_disable {
			color $borderColor
			cursor default

			&:hover {
				color $borderColor
				background none
			}
		}
	}

	&__show {
		margin-left auto
	}

	&__clear {
		position relative

		&::before
		&::after {
			display block
			content ''
			position absolute
			top 50%
			left 50%
			width 20px
			height 2px
			background $borderColor
			transform translateX(-50%) translateY(-50%)
			transition transform $duration, background-color $duration
		}

		&_enable {
			&::before {
				transform translateX(-50%) translateY(-50%) rotate(45deg)
				background-color #333
				faster()
			}

			&::after{
				transform translateX(-50%) translateY(-50%) rotate(-45deg)
				background-color #333
				faster()
			}
		}
	}

	&__control-content {
		padding 0 10px
		max-height 170px
		overflow scroll
	}

	&__control-item {
		border-bottom 1px solid $borderColor
		padding 5px 0 3px
		cursor pointer
		transition color $duration

		&:hover {
			color $borderColor
			faster()
		}

		&_selected {
			color $borderColor
			faster()
		}

		&:not(:last-child) {
			//margin-bottom 10px
		}
	}

	&__popup-button {
		width auto
		min-width 100px

		&_del:hover {
			background rgba(249,173,173,1)
		}
	}

	&__popup {
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		background rgba(255,255,255,.8)
		display flex
		justify-content center
		align-items center
		font-size 20px
		opacity 0
		visibility hidden
		transition opacity $duration, visibility $duration
	}

	&__popup-del-title {
		margin-bottom 10px
	}

	&__popup-danger {
		@extend .terminal__popup
			flex-direction column
		}
}
